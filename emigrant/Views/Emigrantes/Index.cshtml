@model IEnumerable<emigrant.Models.Emigrante>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    input {
        display: block;
        height: 30px;
        width: 100%;
        background-color: rgba(255,255,255,0.07);
        border-radius: 3px; 
        font-size: 14px;
        
    }
    button {
        width: 50px;
        height: 30px;
        background-color: #2e2c2c;
        color: #ffffff;
        font-size: 10px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
        vertical-align: top;
    }

    .btn-default {
        color: #fff;
        background-color: #303030;
        border-color: #ccc;
    }
</style>

<br />
<br />
<h2>Emigrantes Registrados</h2>
<br />
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    <input type="text" value="findid"/><button>Buscar</button>
</div>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Apellidos
        </th>
        <th>
            Tipo Identifacion
        </th>
        <th>
            DNI
        </th>
        <th>
            Pais
        </th>
        <th>
           Nacimiento
        </th>
        <th>
           Correo
        </th>
        <th>
           Numero
        </th>
        <th>
           Direccion
        </th>
        <th>
            Ciudad
        </th>
        <th>
            Situacion Laboral
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoIdentificacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numeroIdentificacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correoElectronico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numeroTelefonico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccionActual)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.situacionLaboral)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
