@model emigrant.Models.servicio

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@{
    var items = new List<SelectListItem>() {
        new SelectListItem()
        {
        Text = "Salud",
        Value = "Salud"
        },        new SelectListItem()
        {
        Text = "Alimentación",
        Value = "Alimentación"
        },        new SelectListItem()
        {
        Text = "Alojamiento temporal",
        Value = "Alojamiento temporal"
        },        new SelectListItem()
        {
        Text = "Alojamiento permanente",
        Value = "Alojamiento permanente"
        },        new SelectListItem()
        {
        Text = "Educación",
        Value = "Educación"
        },        new SelectListItem()
        {
        Text = "Ayuda legal",
        Value = "Ayuda legal"
        }
        };
}

@{
    var itemsPriority = new List<SelectListItem>() {
        new SelectListItem()
        {
        Text = "Alta",
        Value = "Alta"
        },
		 new SelectListItem()
        {
        Text = "Media",
        Value = "Media"
        },
		      new SelectListItem()
        {
        Text = "Baja",
        Value = "Baja"
        }
